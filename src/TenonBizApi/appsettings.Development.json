{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ScalarUI": {
    "Title": "TenonBizApi",
    "Version": "v1",
    "Description": "这是一个使用 Scalar UI 的 OpenAPI 示例项目，展示了 OAuth2 认证和数组参数的使用。",
    "OAuth2": {
      "Authority": "https://localhost:5001",
      "ClientId": "weather_api_client",
      "Scopes": [ "weather_api" ]
    },
    "Theme": {
      "DarkMode": true,
      "Colors": {
        "primary": "#1976d2",
        "secondary": "#424242",
        "success": "#2e7d32",
        "error": "#d32f2f",
        "warning": "#ed6c02",
        "info": "#0288d1"
      }
    }
  }
}
